{
  "manifest_version": 3,
  "name": "Tabs Shortcuts",
  "version": "1.0.0",
  "icons": {
    "16": "shortcuts.png",
    "32": "shortcuts.png",
    "48": "shortcuts.png",
    "128": "shortcuts.png"
  },
  "description": "close other tabs [Alt+X]; copy current tab [Alt+C]; lock or unlock current tab [Alt+L]",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "close_other_tabs": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "close other tabs"
    },
    "lock_this_tab": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Alt+L"
      },
      "description": "lock this tab"
    },
    "copy_this_tab": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "copy this tab"
    }
  }
}